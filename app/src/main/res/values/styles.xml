<resources>

    <!-- Base application theme. -->

    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:drawable/screen_background_dark_transparent</item>
    </style>

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:displayOptions">showHome</item>
    </style>

    <style name="Widget.ActionBar.Blue">
        <item name="android:background">@color/theme_dark_color</item>
        <item name="android:displayOptions">showHome|showTitle</item>
    </style>

    <style name="Widget.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/count_down_timer_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.TextView.Medium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.TextView.VeryBig">
        <item name="android:textSize">100sp</item>
    </style>

    <!--Common-->
    <style name="WeightedByWidthLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="BigButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
    </style>

    <!--Drawer-->
    <style name="DrawerListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/drawer_list_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="DrawerListItemImageView">
        <item name="android:layout_width">@dimen/drawer_list_item_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="DrawerListTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DrawerListIndicator">
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/theme_color</item>
    </style>

    <!--Header-->
    <style name="HeaderDetailsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CountDownPageRootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="TimeLayout">
        <item name="android:layout_width">@dimen/home_activity_headerDetails_timeElement_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TimeText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/countdown_time_textsize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TimeUnitText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/countdown_timeunit_textsize</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HeaderButton">
        <item name="android:layout_width">@dimen/home_activity_header_button_size</item>
        <item name="android:layout_height">@dimen/home_activity_header_button_size</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--Viewpager-->
    <style name="ViewpagerIndicatorLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ViewpagerIndicatorTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ViewpagerSelectionIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:background">@color/theme_color</item>
    </style>

    <style name="SlidingTabStrip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/viewpager_indicator_height</item>
        <item name="android:overScrollMode">ifContentScrolls</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/theme_color</item>
    </style>

    <!--Twitter Activity-->
    <style name="TwitterCircleButton">
        <item name="android:layout_width">@dimen/tweets_activity_twitter_button_size</item>
        <item name="android:layout_height">@dimen/tweets_activity_twitter_button_size</item>
        <item name="android:layout_marginRight">@dimen/padding_small</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="TweeterUserImageView">
        <item name="android:layout_width">@dimen/tweeter_user_image_diameter</item>
        <item name="android:layout_height">@dimen/tweeter_user_image_diameter</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="com.twi.awayday2014:border_color">#ffffff</item>
        <item name="com.twi.awayday2014:border_width">2</item>
    </style>

    <style name="TweeterDetailsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/tweets_details_text_size</item>
        <item name="android:gravity">right</item>
    </style>

    <!--Timeline-->
    <style name="SpeakerImageView">
        <item name="android:layout_width">@dimen/speaker_image_diameter</item>
        <item name="android:layout_height">@dimen/speaker_image_diameter</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="com.twi.awayday2014:border_color">#ffffff</item>
        <item name="com.twi.awayday2014:border_width">2</item>
    </style>

    <style name="AddRemoveSessionButton">
        <item name="android:layout_width">@dimen/speaker_image_diameter</item>
        <item name="android:layout_height">@dimen/speaker_image_diameter</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">9dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/padding</item>
    </style>

    <style name="Widget.Button" parent="@android:style/Widget.Button">
    </style>

    <!--FeedbackActivity-->
    <style name="FeedbackSectionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/padding_small</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:background">@drawable/card</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FeedbackRatingHeaderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--SessionDetails-->
    <style name="QuestionsText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="QuestionsDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#44ffffff</item>
        <item name="android:layout_marginLeft">@dimen/padding</item>
        <item name="android:layout_marginRight">@dimen/padding</item>
    </style>

    <style name="QuestionsListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:divider">@color/white</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:scrollbars">none</item>
    </style>
</resources>
