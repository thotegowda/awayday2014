<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/other_page_background"
             android:orientation="vertical"
             tools:context="com.twi.awayday2014.app.HomeActivity$PlaceholderFragment">


    <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"/>


    <Button
            android:id="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="bottom|right"
            android:textColor="@color/twitter_list_text"
            android:background="@color/twitter_list_bg"
            android:text="Sign in"/>

</FrameLayout>
