<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/notifications_height">

    <ImageView
        android:id="@+id/notifications_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/notifications_image_food" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"
        android:background="@color/transparent_medium_black"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headingText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding"
            android:singleLine="true"
            android:text="Heading"
            android:textColor="@android:color/white"
            android:textSize="@dimen/notifications_heading_text_size" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            android:paddingTop="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_small"
            android:text="Description"
            android:textColor="@android:color/white"
            android:textSize="@dimen/notifications_description_text_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding">

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/notifications_time_text_size"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/labelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding_extra_small"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/notifications_label_text_size"
                android:background="@color/pink"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>