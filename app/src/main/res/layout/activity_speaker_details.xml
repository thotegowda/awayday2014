<?xml version="1.0" encoding="utf-8"?>
<com.twi.awayday2014.view.custom.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:parallax_factor="1.9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/agenda_details_header_image_height">

            <ImageView
                android:id="@+id/backgroundImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/agenda_details_header_image_height"
                android:scaleType="centerCrop"
                android:src="@drawable/awayday_2014_background_blur" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent_light_black"/>

            <com.twi.awayday2014.view.custom.CircularImageView
                android:id="@+id/profile_image"
                android:layout_gravity="center"
                android:layout_width="@dimen/speaker_image_big_diameter"
                android:layout_height="@dimen/speaker_image_big_diameter"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder" />


        </FrameLayout>

        <TextView
            android:id="@+id/speakerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_color"
            android:gravity="center"
            android:text="Speaker Name"
            android:padding="@dimen/padding"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_large"
            android:text="@string/placeHolderTextLarge"
            android:textColor="@android:color/primary_text_light"
            android:background="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</com.twi.awayday2014.view.custom.ParallaxScrollView>