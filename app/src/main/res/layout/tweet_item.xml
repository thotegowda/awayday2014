<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/tweet_list_item_height_normal"
              android:orientation="horizontal"
              android:weightSum="100"
              android:background="@drawable/card_background_small">

    <ImageView
            android:id="@+id/profile_thumbnail"
            android:layout_width="0dp"
            android:layout_height="@dimen/tweet_list_profile_pic_height"
            android:layout_weight="20"
            android:layout_gravity="top"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tw_profile_placeholder"/>


    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

            <TextView
                    android:id="@+id/tweeted_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/twitter_user_name_text_size"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/tweet_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/tweeted_by"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/tweet_time_text_size"
                    android:gravity="bottom|right"/>

            <TextView
                    android:id="@+id/tweet_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tweeted_by"
                    android:textSize="@dimen/tweet_text_size"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"/>

        </RelativeLayout>

        <ImageView
                android:id="@+id/tweet_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tweet_list_item_image_height"
                android:scaleType="fitCenter"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/gray_transparent_background"
                android:visibility="gone"/>

    </LinearLayout>


</LinearLayout>