<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:weightSum="100"
              android:background="@drawable/card_background_small">

    <ImageView
            android:id="@+id/profile_thumbnail"
            android:layout_width="0dp"
            android:layout_height="@dimen/tweet_list_item_height"
            android:layout_weight="20"
            android:layout_gravity="top"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tw_profile_placeholder"/>

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/tweet_list_item_height"
            android:layout_weight="80"
            android:padding="5dp">

        <TextView
                android:id="@+id/tweeted_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/twitter_user_name_text_size"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/tweet_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tweeted_by"
                android:textSize="@dimen/tweet_text_size"
                android:maxLines="3"
                android:ellipsize="end"
                android:gravity="left|center_vertical"/>

        <TextView
                android:id="@+id/tweet_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/tweet_time_text_size"
                android:gravity="bottom|right"/>
    </RelativeLayout>
</LinearLayout>