<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.twi.awayday2014.view.custom.PagerSlidingTabStrip
        android:id="@+id/pager_indicator"
        style="@style/SlidingTabStrip"
        android:layout_marginTop="@dimen/home_activity_header_height_without_countdown"
        app:indicatorColor="@color/theme_dark_color"
        app:indicatorHeight="3dp"
        app:dividerColor1="@color/white"/>

</FrameLayout>